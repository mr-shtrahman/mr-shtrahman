    function drawBar(jsonData) {
        var margin = { top: 20, right: 20, bottom: 30, left: 40 },
            width = 400 - margin.left - margin.right,
            height = 300 - margin.top - margin.bottom;

        // set the ranges
        var x = d3.scaleBand()
            .range([0, width])
            .padding(0.1);
        var y = d3.scaleLinear()
                .range([height, 0]);


        // get some color in
        var color = d3.schemeCategory10;


        console.log(d3.select('#weather_graph'));

        // append the svg object to the body of the page
        // append a 'group' element to 'svg'
        // moves the 'group' element to the top left margin
        var svg = d3.select("#weather_graph").append("svg")
            .attr("width", width + margin.left + margin.right)
            .attr("height", height + margin.top + margin.bottom)
            .append("g")
            .attr("transform",
                "translate(" + margin.left + "," + margin.top + ")");

        //var yTicks = jsonData.map(function (d) { return d.Temperature; }).sort(function (a, b) {
        //    return a - b;
        //});

        // Scale the range of the data in the domains
        x.domain(jsonData.map(function (d) { return d.Date; }));
        //y.domain(yTicks);
        y.domain([d3.min(jsonData.map(function (d) { return d.Temperature; })) - 1, d3.max(jsonData.map(function (d) { return d.Temperature; })) + 1]);
        //y.domain(jsonData.map(function (d) { return d.Temperature; }));
        
        console.log(x.domain());
        console.log(y.domain());


        // append the rectangles for the bar chart
        var bars = svg.selectAll("#weather_graph")
            .data(jsonData)
            .enter().append("rect")
            .attr("class", "bar")
            .attr("x", function (d) { return x(d.Date); })
            .attr("width", x.bandwidth())
            .attr("y", function (d) { return y(d.Temperature); })
            .attr("height", function (d) { return height - y(d.Temperature); })
            .attr('fill', function (d, i) { return color[i]; });

        // add the x Axis
        svg.append("g")
            .attr("transform", "translate(0," + height + ")")
            .call(d3.axisBottom(x));

        // add the y Axis
        svg.append("g")
            .call(d3.axisLeft(y))
            .append("text")
            .attr("transform", "rotate(-90)")
            .attr("y", 6)
            .attr("dy", "-35px")
