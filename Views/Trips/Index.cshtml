<link rel="stylesheet" href="~/css/trip.css">

@model IEnumerable<mr_shtrahman.Models.Trip>
@using mr_shtrahman.enums

@{
    ViewData["Title"] = "Index";
}

<body onload="loadImage()">
    <div class="header">
        <h1>OUR TRIPS</h1>

        <form asp-action="Search" class="input-group search">
            <div class="form-outline">
                <input name="query"
                       placeholder="search trips"
                       type="search"
                       class="form-control" />
            </div>
            <button type="submit" value="search" class="btn btn-dark">
                Search
            </button>
        </form>
    </div>
    <a asp-action="Create" class="btn btn-lg btn-outline-info add-trip">ADD TRIP +</a>

    <div class="row justify-content-between">
        @foreach (var item in Model)
        {
            <div class="col-sm-6" style="margin-top: 10px">
                <div class="card">
                    <input type="hidden" value=@item.Id.ToString() name="dynamicImageUrl" />
                    <img class="card-img-top" id="@item.Id.ToString()"
                         src="" />
                    <div class="card-body">
                        <div class="card-title">
                            <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
                            <div class="row">
                                <div class="col">@Html.DisplayFor(modelItem => item.Difficulty)</div>
                                <div class="col">@Html.DisplayFor(modelItem => item.TripType)</div>
                                <div class="col">@Html.DisplayFor(modelItem => item.Price)</div>
                            </div>
                        </div>
                        <hr />
                        <div class="card-text" id="card-text">
                            <div class="card-subtitle">@Html.DisplayFor(modelItem => item.Destination)</div>
                            <div class="address"> @Html.DisplayFor(modelItem => item.Location)</div>
                            <br />
                        </div>
                        <hr />
                        <a class="details btn-lg" asp-action="Details" asp-route-id="@item.Id">Go There</a>
                        <hr />
                        <div class="row">
                            <div class="rate">
                                @for (int i = 1; i <= (5 - item.Rating); i++)
                                {
                                    <input type="radio" id="gray-star" name="rate" value="5" />
                                    <label for="gray-star" title="text">star</label>
                                }
                                @for (int i = 1; i <= item.Rating; i++)
                                {
                                    <input type="radio" id="gold-star" name="rate" value="5" />
                                    <label for="gold-star" title="text">star</label>
                                }
                            </div>
                            <div class="card-actions col">
                                <a class="btn-outline-dark btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn-outline-dark btn-sm" href="none" data-toggle="modal" data-target="#deleteModal">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <form class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">Delete Trip</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body" id="deleteModalBody">
                            Are you sure you want to delete this trip?
                            <br />
                            <a data-toggle="collapse" href="#collapseTripData" role="button" aria-expanded="false" aria-controls="collapseTripData">
                                Show more details...
                            </a>
                            <div class="collapse" id="collapseTripData">
                                <div class="card card-body">
                                    <div class="row">
                                        <div class="col data-name">
                                            @Html.DisplayNameFor(modelItem => item.Name)
                                        </div>
                                        <div class="col">
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col data-name">
                                            @Html.DisplayNameFor(modelItem => item.TripType)
                                        </div>
                                        <div class="col">
                                            @Html.DisplayFor(modelItem => item.TripType)
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col data-name">
                                            @Html.DisplayNameFor(modelItem => item.Difficulty)
                                        </div>
                                        <div class="col">
                                            @Html.DisplayFor(modelItem => item.Difficulty)
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col data-name">
                                            @Html.DisplayNameFor(modelItem => item.Price)
                                        </div>
                                        <div class="col">
                                            @Html.DisplayFor(modelItem => item.Price)
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col data-name">
                                            @Html.DisplayNameFor(modelItem => item.Rating)
                                        </div>
                                        <div class="col">
                                            @Html.DisplayFor(modelItem => item.Rating)
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col data-name">
                                            @Html.DisplayNameFor(modelItem => item.Location)
                                        </div>
                                        <div class="col">
                                            @Html.DisplayFor(modelItem => item.Location)
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col data-name">
                                            @Html.DisplayNameFor(modelItem => item.Destination)
                                        </div>
                                        <div class="col">
                                            @Html.DisplayFor(modelItem => item.Destination)
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col data-name">
                                            @Html.DisplayNameFor(modelItem => item.Details)
                                        </div>
                                        <div class="col">
                                            @Html.DisplayFor(modelItem => item.Details)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <form asp-action="Delete">
                                <input type="hidden" asp-for=@item.Id />
                                <a asp-action="Index" id="delete" class="btn btn-secondary">Cancel</a>
                                <input type="submit" asp-action="Delete" asp-route-id="@item.Id" value="Delete" class="btn btn-danger" />
                            </form>
                        </div>
                    </div>
                </div>
            </form>
        }
    </div>
</body>
<script type="text/javascript">
    function loadImage() {
        for (i = 1; i <= document.getElementsByName('dynamicImageUrl').length; i++) {
            (function (i) {
                var id = i.toString();
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("TripImage")',
                    data: { id },
                    success: function (image) {
                        document.getElementById(id).src = image;
                    },
                    error: function () {
                        alert("An error has occured!");
                    }
                });
            })(i);
        }
    }
</script>